---
import GitHub from "./icons/GitHub.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import NextJS from "../components/icons/NextJS.astro"
import Tailwind from "../components/icons/Tailwind.astro"
import HTMLIcon from "../components/icons/HTMLIcon.astro"
import CSSIcon from "../components/icons/CSSIcon.astro"
import JSIcon from "../components/icons/JSIcon.astro"
import TSIcon from "../components/icons/TSIcon.astro"
import ReactIcon from "../components/icons/ReactIcon.astro"
import NodeIcon from "../components/icons/NodeIcon.astro"
import BootstrapIcon from "../components/icons/BootstrapIcon.astro"
import GitIcon from "../components/icons/GitIcon.astro"
import PythonIcon from "../components/icons/PythonIcon.astro"
import MySQLIcon from "../components/icons/MySQLIcon.astro"
import AstroIcon from "../components/icons/AstroIcon.astro"

export const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-500 text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-600 text-white",
    icon: CSSIcon,
  },
  JS: {
    name: "JavaScript",
    class: "bg-yellow-500 text-white",
    icon: JSIcon,
  },
  TS: {
    name: "TypeScript",
    class: "bg-blue-500 text-white",
    icon: TSIcon,
  },
  REACT: {
    name: "React.js",
    class: "bg-blue-400 text-white",
    icon: ReactIcon,
  },
  NODE: {
    name: "Node.js",
    class: "bg-green-500 text-white",
    icon: NodeIcon,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-purple-600 text-white",
    icon: BootstrapIcon,
  },
  GIT: {
    name: "Git",
    class: "bg-[#FF5C00] text-white",
    icon: GitIcon,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#F7C843] text-white",
    icon: PythonIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#0e798a] text-white",
    icon: MySQLIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#FF5C00] text-white",
    icon: AstroIcon,
  },
};

const PROJECTS = [
  {
    title: "HTML, CSS y JS - Una galería de proyectos vanilla",
    description:
      "Retos de programación que conlleva diversos proyectos realizados sin ninguna librería/dependencia. 100% vanilla.",
    link: "https://projects-vanilla-js.netlify.app/",
    github: "https://github.com/Shootmewolft/projects-vanilla-js",
    image: "/projects/projects-vanilla.webp",
    tags: [TAGS.ASTRO, TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
  {
    title: "Tic Tac Toe - Juego",
    description:
      "Tic Tac Toe es un juego de estrategia para dos jugadores en una cuadrícula de 3x3, donde cada jugador intenta alinear tres de sus símbolos (X o O) en fila. ¡Diviértete compitiendo por ser el primero en ganar!.",
    link: "https://tic-tac-toe-shoot.netlify.app/",
    github: "https://github.com/Shootmewolft/tic-tac-toe",
    image: "/projects/tic-tac-toe.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.TS],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Código
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Ver
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



